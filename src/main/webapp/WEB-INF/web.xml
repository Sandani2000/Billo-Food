<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
	<!--Sign up-->
	<servlet>
		<servlet-name>SignUp</servlet-name>
		<servlet-class>com.user.SignUpServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SignUp</servlet-name>
		<url-pattern>/insert</url-pattern>
	</servlet-mapping>
	
	<!--Sign In-->
	<servlet>
		<servlet-name>SignIn</servlet-name>
		<servlet-class>com.user.SignInServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>SignIn</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<!--Update-->
	<servlet>
		<servlet-name>updateCustomer</servlet-name>
		<servlet-class>com.user.editProfileServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>updateCustomer</servlet-name>
		<url-pattern>/edit</url-pattern>
	</servlet-mapping>
	
	<!--Delete-->
	<servlet>
		<servlet-name>deleteCustomer</servlet-name>
		<servlet-class>com.user.deleteAccountServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>deleteCustomer</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
</web-app>  
